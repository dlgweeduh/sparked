<section class="blog">
  <div class="container">
    <div class="row">
      <div class="col-sm-8">

        <h1>Sparklers</h1>

        <table>
          <tr>
<!--             <th>Title</th>
            <th>Text</th> -->
          </tr>
         
          <% @articles.each do |article| %>
            <tr>
              
              <td class="titles"><%= article.title %></td>
              
              <td class="text"><%= article.text %></td>

              <td class="blog-button"><%= link_to 'Read', article_path(article) %></td>
              <td class="blog-button"><%= link_to 'Edit', edit_article_path(article) %></td>
              <td class="blog-button"><%= link_to 'Delete', article_path(article),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>    
            </tr>
          <% end %>

        </table>
        <%= link_to 'New article', new_article_path %>
      </div>
    </div>
  </div>
</section>