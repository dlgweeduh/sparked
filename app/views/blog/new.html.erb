<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="blog">
        <%= form_for :blog, url: blog_path do |f| %>
          <p>
            <%= f.label :title %><br>
            <%= f.text_field :title %>
          </p>
         
          <p>
            <%= f.label :text %><br>
            <%= f.text_area :text %>
          </p>
         
          <p>
            <%= f.submit %>
          </p>
        <% end %>

        <%= link_to 'Back', blog_path %>
      </div>
    </div>
  </div>
</div>